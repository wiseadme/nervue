{
  "name": "@nervue/root",
  "packageManager": "pnpm@7.9.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm run -r dev",
    "test": "pnpm run -r test",
    "docs:dev": "pnpm run -r docs:dev",
    "docs:build": "pnpm run -r docs:build",
    "docs:serve": "pnpm run -r docs:serve",
    "lint": "eslint --ext .ts, packages/nervue/src",
    "lint:editor": "editorconfig-checker",
    "prepare": "husky install",
    "build": "rollup --bundleConfigAsCjs -c ./rollup.config.js",
    "build:all": "npm run build && pnpm run -r build:dts && node scripts/rm-temps.mjs",
    "build:pages": "gh-pages -d ./packages/docs/.vuepress/dist",
    "deploy:docs": "npm run docs:build && npm run build:pages"
  },
  "devDependencies": {
    "@babel/core": "^7.19.0",
    "@babel/preset-env": "^7.19.0",
    "@babel/preset-typescript": "^7.18.6",
    "@rollup/plugin-commonjs": "^23.0.2",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-replace": "^5.0.1",
    "@types/jest": "^27.4.1",
    "@vue/compiler-sfc": "^3.1.0",
    "@vue/test-utils": "^2.2.0",
    "babel-jest": "^26.6.3",
    "editorconfig-checker": "^4.0.2",
    "eslint": "^7.32.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-vue": "^8.4.1",
    "gh-pages": "^4.0.0",
    "husky": "^8.0.1",
    "jest": "^26.5.2",
    "jest-serializer-html": "^7.1.0",
    "path": "^0.12.7",
    "regenerator-runtime": "^0.13.9",
    "rimraf": "^3.0.2",
    "rollup": "^3.2.5",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.34.1",
    "ts-jest": "^26.5.2",
    "typescript": "^4.5.5",
    "vue": "^3.1.0",
    "vue-jest": "^5.0.0-alpha.10"
  }
}
