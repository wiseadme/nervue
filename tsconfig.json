{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "packages/nervue/dist",
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "allowJs": true,
    "incremental": true,
    "noEmit": false,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "strictFunctionTypes": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": false,
    "skipLibCheck": true,
    "typeRoots": [
      "./packages/nervue/src/types",
    ],
    "types": [
      "@vue/compiler-sfc/dist/compiler-sfc",
      "vue/ref-macros",
      "@types/jest"
    ],
    "paths": {
      "nervue": ["packages/nervue/src"]
    }
  },
  "include": [
    "packages/nervue/src/**/*.ts",
    "packages/nervue/__tests__/**/*.ts",
  ],
  "exclude": [
    "node_modules",
  ]
}
