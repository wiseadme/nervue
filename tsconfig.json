{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "packages/nervue/dist",
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "allowJs": true,
    "incremental": true,
    "noEmit": false,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "strictFunctionTypes": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declarationDir": "packages/nervue/dist/types",
    "composite": true,
    "skipLibCheck": true,
    "plugins": [
      {
        "afterDeclarations": true
      }
    ],
    "typeRoots": [],
    "types": [
      "@vue/compiler-sfc/dist/compiler-sfc",
      "@types/jest"
    ]
  },
  "include": [
    "packages/nervue/src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.mock.ts"
  ]
}
